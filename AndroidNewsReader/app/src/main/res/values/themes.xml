<resources>
    <!-- Base application theme. -->
    <style name="Theme.CodingTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal</item>
        <item name="colorSecondaryVariant">@color/teal</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CodingTest.BaseTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="Theme.CodingTest.BaseTheme.Translucent">
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.MaterialComponents.Toolbar">
        <!--<item name="android:background">@color/white</item>-->
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorPrimary">@color/colorOnSurface</item>
    </style>

    <style name="Theme.CodingTest.PopupOverlay" parent="Theme.CodingTest.BaseTheme.Translucent">
        <item name="colorControlNormal">?attr/colorPrimary</item>
    </style>

    <style name="ToolbarTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Widget.Savvy.TextView.Input.SearchBox" parent="Widget.AppCompat.EditText">
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">none</item>
        <item name="android:padding">0dp</item>
    </style>
</resources>